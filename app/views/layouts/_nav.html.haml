- if current_user
  - @navtype = "navbar-inverse"
- else
  - @navtype = "navbar-default"
%div.navbar.navbar-fixed-top#sitenav{ class: @navtype }
  %div.container
    %div.navbar-header
      %button.navbar-toggle{'type' => 'button', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse'}
        %span{class: 'icon-bar'}
        %span{class: 'icon-bar'}
        %span{class: 'icon-bar'}
        %a.navbar-brand{ href: "/s/" }= @app_name || Rails.application.config.fission.site_brand
    %div.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li.active
            %a{ href: root_url }= 'Dashboard'
          %li
            %a{ href: accounts_url }= 'Accounts'
        - else
          - if @nav
            - @nav.each do |section|
              %li
                %a{ href: section[:url] }= section[:name]
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            %a{href: '#', 'data-toggle' => 'dropdown'}
              %img.pull-left{ src: current_user.identities.first[:infos].try(:[], :image), width: 30, height: 30 }
              %b.caret
            %ul{class: 'dropdown-menu'}
              %li
                %a{ href: edit_user_url(current_user.id) }= 'Profile'
              %li
                %a{ href: destroy_session_url }= 'Logout'

        - else
          - if !request.original_url.include? 'login'
            %li
              %a{ href: root_url }= "Dashboard"
